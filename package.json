{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "author": "Erol Kocaman",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "rimraf ./build && parcel src/index.html -p 5050 -d build",
    "build": "rimraf ./build && parcel build src/index.html -d build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "verify": "prettier --check 'src/**/*.+(ts|tsx)' && eslint 'src/**/*.+(ts|tsx)' && tsc --noEmit"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "axios": "0.19.1",
    "date-fns": "^2.9.0",
    "jsonwebtoken": "8.5.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-infinite-scroller": "^1.2.4",
    "react-router-dom": "5.1.2",
    "react-virtualized-auto-sizer": "^1.0.2",
    "storeon": "2.0.1",
    "styled-components": "5.0.0",
    "typescript": "3.7.5",
    "use-debounce": "^3.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "@types/faker": "4.1.9",
    "@types/jest": "24.0.25",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/react-router-dom": "5.1.3",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/styled-components": "4.1.8",
    "@typescript-eslint/eslint-plugin": "2.15.0",
    "@typescript-eslint/parser": "2.15.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "faker": "4.1.0",
    "husky": "4.0.6",
    "jest": "24.9.0",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-html-externals": "~0.1.2",
    "parcel-plugin-static-files-copy": "~2.2.2",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.3.0",
    "typedoc": "0.16.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test && yarn verify"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/?(*.)+(test).+(ts|tsx)"
    ],
    "globals": {
      "config": {}
    }
  },
  "staticFiles": {
    "staticPath": "public",
    "watcherGlob": "**"
  },
  "externals": {
    "/config/*": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
